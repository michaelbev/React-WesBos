/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background green
  transform: translateX(-120%)
  transition: 0.5s
  max-height: 0
  padding: 0 !important
  &.order-enter-active
    background: white
    transform: translateX(0) rotate(360deg)
    max-height: 60px
    padding 2rem 0 !important

.order-exit
  background: thistle
  transition: 0.5s
  transform: translateX(0)
  &.order-exit-active
    background: palegolenrod
    transform: translateX(120%)
    padding 0 !important

.count-enter
  transition: 0.5s
  transform: translateY(100%);
  &.count-enter-active
    transform: translateY(0);

.count-exit
  transition: 0.5s
  position absolute
  left 0
  bottom 0
  transform: translateY(0);
  &.count-exit-active
    transition: 0.5s
    transform: translateY(-100%);

